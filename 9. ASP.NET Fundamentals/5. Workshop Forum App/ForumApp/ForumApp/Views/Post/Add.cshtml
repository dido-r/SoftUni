@{
    ViewData["Title"] = "Add Post";
}
@model PostViewModel

<h2 class="text-center">@ViewBag.Title</h2>
<hr />

<div class="row">
    <form method="post">
        <div class="form-group">
            <div class="mb-3">
                <label asp-for="Title"></label>
                <input asp-for="Title" class="form-control" placeholder="Write post title..." />
                <span asp-validation-for="Title" class="small text-danger"></span><br/>
                <label asp-for="Content"></label>
                <input asp-for="Content" class="form-control" placeholder="Write post content..." />
                <span asp-validation-for="Content" class="small text-danger"></span>
            </div>
        </div>
        <input class="btn btn-primary mt-3" type="submit" value="Create" />
    </form>
</div>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}